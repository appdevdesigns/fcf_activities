<!-- 
#  Appdev Label Info:
#label_context:opstool-FCFActivities
#language_code:en
-->
<!--Image Name-->
<div id="opsportal-activityName" class="off-botm20">
    <input type="hidden" class="form-control" name="language_code" value="<%= language_code || 'en' %>" >
    <div class="form-group">
        <div class="col-sm-12">
            <div class="op-container off-botm20" style="background: #666; text-align: center;">
                <div class="img-responsive" ap-op-image="true" opimage-url="<%= data.image.replace("scaled", "print") %>">
                    <img class="img-responsive" src="<%= data.image.replace("scaled", "print") %>" alt="Responsive image" >
                </div>  
            </div>
        </dvi>
    </div>
    <div class="form-horizontal">
        <!--Caption--> 
        <div class="form-group">
            <div class="col-sm-3">
                <strong><span app-label-key="fcf.imageapproval.caption">Caption:</span></strong>
            </div>
            <div class="col-sm-9">
                <%= data.caption %>
            </div>
        </div>
        <!--/Caption-->
        <!--Caption Govt--> 
        <div class="form-group">
            <div class="col-sm-3">
                <strong><span app-label-key="fcf.imageapproval.caption_govt">Activity Location</span>:</strong>
            </div>
            <div class="col-sm-9">
                <%= data.caption_govt %>
            </div>
        </div>
        <!--/Caption Govt-->
        <!--Date-->
        <div class="form-group">
            <div class="col-sm-3">
                <strong><span app-label-key="fcf.imageapproval.date">Date:</span></strong>
            </div>
            <div class="col-sm-9">
                <%= data.date %>
            </div>
        </div>
        <!--/Date-->
        <!--People in Photo-->
        <div class="form-group">
            <div class="col-sm-3">
                <strong><span app-label-key="fcf.imageapproval.peopleInPhoto">People in photo:</span></strong>
            </div>
            <div class="col-sm-9">
                <!--List of people with closed button-->
                <% taggedPeople.forEach(function(person, idx, array){ %>
                    <%= person.display_name %><% if (idx !== array.length - 1) { %>, <% } %>
                <%  }) %>
                <!--/End here-->
            </div>
        </div>
        <!--/People in Photo-->  
    </div>
</div> 
<!--/Image Name-->
